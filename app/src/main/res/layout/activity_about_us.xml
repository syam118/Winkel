<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="#647C82"
    tools:context=".AboutUs">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Winkel"
            android:textColor="#333F42"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:gravity="center"
            android:textSize="45dp"
            android:layout_marginTop="150dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="monospace"
            android:text="WINKEL, this application will be useful for every group of people who shops in our stores. This application is useful to search for availability of the product and its location in
the store."
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            android:textSize="20dp"/>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:background="@color/white">


    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>